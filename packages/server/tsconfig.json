{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom",
      "es2017.object",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ]
  },
  "outDir": "./dist",
  "baseUrl": "./src",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "../../node_modules"]
}
